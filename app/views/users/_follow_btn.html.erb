<% if user.followed_by?(current_user) %>
  <%= link_to "フォロー中", user_relationships_path(user), class: "btn btn-sm btn-primary", method: :delete, data: {confirm: "フォローを解除しますか？"} %>
<% else %>
  <%= link_to "フォローする", user_relationships_path(user), class: "btn btn-sm btn-outline-primary", method: :post %>
<% end %>