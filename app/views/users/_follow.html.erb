
  <% model.each do |follow| %>
    <div class="row">
      <div class="col text-right">
        <%= link_to user_path(follow) do %>
          <%= attachment_image_tag follow, :profile_image, fallback: "no-image.jpg", size: "50x50", class: "rounded-circle" %>
        <% end %>
      </div>
      <div class="col-lg-2 col-4">
        <p class="text-center">
          <strong><%= link_to follow.account_name, user_path(follow) %></strong><br>
          <span style="font-size: 14px;"><%= follow.first_name + follow.last_name %></span>
        </p>
      </div>
      <div class="col d-flex align-items-center text-left">
        <!--非同期＋部分テンプレート化修正検討-->
        <% if follow.followed_by?(current_user) %>
          <%= link_to "フォロー中", user_relationships_path(follow), class: "btn btn-sm btn-primary", method: :delete, data: {confirm: "フォローを解除しますか？"} %>
        <% else %>
          <%= link_to "フォローする", user_relationships_path(follow), class: "btn btn-sm btn-outline-primary", method: :post %>
        <% end %>
      </div>
    </div>
  <% end %>
