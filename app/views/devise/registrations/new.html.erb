<div class="container mt-5">
  <div class="row">
    <div class="col-lg-6 mx-auto">
      
      <h2>Sign up</h2>
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
      
        <div class="field mb-3">
          <%= f.label :account_name, "アカウント名" %><br />
          <%= f.text_field :account_name, autofocus: true, placeholder: "プロゴルファー猿" %>
        </div>
      
        <div class="field mb-3">
          <%= f.label :first_name, "Name" %><br />
          <%= f.text_field :first_name, placeholder: "姓", class: "mr-5" %>
          <%= f.text_field :last_name, placeholder: "名" %>
        </div>
          
        <div class="field mb-3">
          <%= f.label :sex, "性別" %><br />
          <%= f.select :sex, {"男性": 1, "女性": 2}, { include_blank: "選択してください"} %>
        </div>
      
        <div class="field mb-3">
          <%= f.label :email, "アドレス" %><br />
          <%= f.email_field :email, autocomplete: "email", placeholder: "sample@sample.com" %>
        </div>
        
        <div class="field mb-3">
          <%= f.label :prefectures, "都道府県" %><br />
          <%= f.select :prefecture, User.prefectures.keys %>
        </div>
        
        <div class="field mb-3">
          <%= f.label :start_year, "ゴルフ開始年月" %><br />
          <%= f.text_field :start_year, placeholder: "2000", class: "mr-5" %>
          <%= f.text_field :start_month, placeholder: "1" %>
        </div>
      
        <div class="field mb-3">
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
      
        <div class="field">
          <%= f.label :password_confirmation, "パスワード確認用" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      
        <div class="actions mb-3">
          <%= f.submit "Sign up" %>
        </div>
      <% end %>
      
      <%= render "devise/shared/links" %>
      
    </div>
  </div>
</div>

