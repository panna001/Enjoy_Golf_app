<div class="container py-4">
  <div class="row">
    <div class="d-none col-lg-2 d-lg-block">

    </div>
    <div class="col-12 col-md-4 col-lg-3 mx-auto mx-lg-0 order-md-1 mb-3">
      <div class="sidebar_fixed">
        <%= render "posts/search", q:@q %>
      </div>
    </div>
    <div class="col-12 col-md-8 col-lg-6 mx-auto mx-lg-0 order-md-0">
      <% @posts.each do |post| %>
        <%= render "posts/card", post:post, comment:@comment %>
      <% end %>
    </div>
  </div>
</div>