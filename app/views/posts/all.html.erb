<div class="container py-4 px-0">
  <div class="row">
    <div class="d-none col-lg-2 d-lg-block">

    </div>
    <div class="col-10 col-lg-3 col-md-4 mx-auto mx-lg-0 order-md-1 mb-3">
      <div class="sidebar_fixed">
        <p class="text-center h5"><%= link_to "Following Article", posts_path %></p>
        <%= render "posts/search", q:@q %>
      </div>
    </div>
    <div class="col-12 col-lg-5 col-md-8 mx-auto mx-lg-0 order-md-0">
      <% @posts.each do |post| %>
        <%= render "posts/card", post:post %>
      <% end %>
    </div>
  </div>
</div>