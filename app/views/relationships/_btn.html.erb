<!--非同期にしたい-->
  <% if user.followed_by?(current_user) %>
    <%= link_to "フォロー中", user_relationships_path(user), class: "btn btn-sm btn-primary shadow", remote:true, method: :delete %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(user), class: "btn btn-sm btn-outline-primary shadow", remote:true, method: :post %>
  <% end %>