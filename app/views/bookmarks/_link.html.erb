<% if post.bookmarked_by?(current_user) %>
  <%= link_to post_bookmarks_path(post), method: :delete, remote: true, class: "text-danger" do %>
    <i class="fas fa-tag"></i>
  <% end %>
<% else %>
  <%= link_to post_bookmarks_path(post), method: :post, remote: true, class: "text-secondary" do %>
    <i class="fas fa-tag"></i>
  <% end %>
<% end %>
  