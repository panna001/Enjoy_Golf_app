<% if post.bookmarked_by?(current_user) %>
  <%= link_to post_bookmarks_path(post), method: :delete, remote: true, class: "text-warning", data: {disable_with: "<i class='fas fa-tag'></i>"} do %>
    <i class="fas fa-tag"></i>
  <% end %>
<% else %>
  <%= link_to post_bookmarks_path(post), method: :post, remote: true, class: "text-secondary", data: {disable_with: "<i class='fas fa-tag'></i>"} do %>
    <i class="fas fa-tag"></i>
  <% end %>
<% end %>
