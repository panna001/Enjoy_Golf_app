<header class="fixed-top">
  <% if user_signed_in? %>
    <nav class="navbar navbar-expand-md shadow ">
      <div class="container">
        <%= link_to "Enjoy Golf", posts_path, class: "navbar-brand text-light" %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon "></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">

          <ul class="navbar-nav d-md-flex align-items-center ml-auto d-none ">
            <li class="nav-item"><%= link_to "Articles", all_path, class: "nav-link text-light" %></li>
            <li class="nav-item"><%= link_to "Users", users_path, class: "nav-link text-light" %></li>
            <li class="nav-item"><%= link_to "New", new_post_path, class: "nav-link text-light" %></li>
            <li class="nav-item"><%= link_to "Scores", user_rounds_path(current_user), class: "nav-link text-light" %></li>
            <li class="nav-item">
              <% if unchecked_notifications.any? %>
                <%= link_to "Notice", notifications_path, class: "nav-link text-warning" %>
              <% else %>
                <%= link_to "Notice", notifications_path, class: "nav-link text-light" %>
              <% end %>
            </li>
            <li class="nav-item"><%= link_to "Logout", destroy_user_session_path, class: "nav-link text-light", method: :delete %></li>
            <li class="nav-item d-none d-md-inline-block">
              <%= link_to user_path(current_user) do %>
                <%= attachment_image_tag current_user, :profile_image, fallback: "no-image.jpg", size: "30x30", class: "rounded-circle p-0 m-0" %>
              <% end %>
            </li>
            <li class="nav-item d-md-none"><%= link_to "Mypage", user_path(current_user), class: "nav-link text-light" %></li>
          </ul>
      <!--トグル時-->
          <ul class="navbar-nav d-flex align-items-center ml-auto d-md-none">
            <li class="nav-item"><%= link_to "Articles", all_path, class: "nav-link text-light" %></li>
            <li class="nav-item"><%= link_to "Users", users_path, class: "nav-link text-light" %></li>
              <% if unchecked_notifications.any? %>
                <%= link_to "Notice", notifications_path, class: "nav-link text-warning" %>
              <% else %>
                <%= link_to "Notice", notifications_path, class: "nav-link text-light" %>
              <% end %>
            </li>
            <li class="nav-item"><%= link_to "New", new_post_path, class: "nav-link text-light" %></li>
            <li class="nav-item"><%= link_to "Scores", user_rounds_path(current_user), class: "nav-link text-light" %></li>
            <li class="nav-item">
            <li class="nav-item d-md-none"><%= link_to "Mypage", user_path(current_user), class: "nav-link text-light" %></li>
            <li class="nav-item"><%= link_to "Logout", destroy_user_session_path, class: "nav-link text-light", method: :delete %></li>
          </ul>

        </div>
      </div>
    </nav>
  <% else %>
    <nav class="navbar navbar-expand shadow ">
      <div class="container">
        <%= link_to "Enjoy Golf", root_path, class: "navbar-brand text-light" %>
        <ul class="navbar-nav">
          <li class="nav-item"><%= link_to "Login", new_user_session_path, class: "nav-link text-light" %></li>
          <li class="nav-item"><%= link_to "Signin", new_user_registration_path, class: "nav-link text-light" %></li>
          <li class="nav-item"><%= link_to "About", about_path, class: "nav-link text-light" %></li>
        </ul>
      </div>
    </nav>
    <% end %>
</header>