<header class="shadow-sm fixed-top">
  <nav class="navbar navbar-expand navbar-dark shadow ">
    <div class="container">
      <% if user_signed_in? %>
        <%= link_to "LOGO", posts_path, class: "navbar-brand" %>

        <ul class="navbar-nav d-flex align-items-center">
          <li class="nav-item"><%= link_to "New", new_post_path, class: "nav-link text-light" %></li>
          <li class="nav-item"><%= link_to "Users", users_path, class: "nav-link text-light" %></li>
          <li class="nav-item">
            <% if unchecked_notifications.any? %>
              <%= link_to "Notice", notifications_path, class: "nav-link text-warning" %>
            <% else %>
              <%= link_to "Notice", notifications_path, class: "nav-link text-light" %>
            <% end %>
          </li>
          <li class="nav-item"><%= link_to "Logout", destroy_user_session_path, class: "nav-link text-light", method: :delete %></li>
          <li class="nav-item">
            <%= link_to user_path(current_user) do %>
              <%= attachment_image_tag current_user, :profile_image, fallback: "no-image.jpg", size: "30x30", class: "rounded-circle p-0 m-0" %>
            <% end %>
          </li>
        </ul>

      <% else %>
        <%= link_to "LOGO", root_path, class: "navbar-brand" %>
        <ul class="navbar-nav">
          <li class="nav-item"><%= link_to "Login", new_user_session_path, class: "nav-link text-light" %></li>
          <li class="nav-item"><%= link_to "Signin", new_user_registration_path, class: "nav-link text-light" %></li>
          <li class="nav-item"><%= link_to "About", about_path, class: "nav-link text-light" %></li>
        </ul>
      <% end %>
    </div>
  </nav>

</header>