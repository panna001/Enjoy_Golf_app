<% if post.favorited_by?(current_user) %>
  <%= link_to post_favorites_path(post), method: :delete, remote: true, class: "text-danger ml-1", data: {disable_with: "<i class='fas fa-thumbs-up'></i>"} do %>
    <i class="fas fa-thumbs-up"></i> <%= post.favorites.count %>
  <% end %>
<% else %>
  <%= link_to post_favorites_path(post), method: :post, remote: true, class: "text-primary ml-1", data: {disable_with: "<i class='fas fa-thumbs-up'></i>"} do %>
    <i class="fas fa-thumbs-up"></i> <%= post.favorites.count %>
  <% end %>
<% end %>